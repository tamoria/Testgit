current_number = 0 
while current_number < 10:
    current_number += 1
    if current_number % 2 == 0:
        continue              # This makes it return to adding another 1 to the current number -> printing odd numbers instead of even.

    print(current_number)
print('')

# Avoid Infinite Loops

x = 1
while x <= 5:
    print(x)
    x += 1

# This loop runs forever!
